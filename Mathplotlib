from sklearn.datasets import load_wine
import pandas as pd
import matplotlib.pyplot as plt
import os


# make it a cvs
data = load_wine()

df = pd.DataFrame(data=data['data'],
                    columns= data['feature_names'])

plt.title('Linear Plot')
plt.xlabel('Index                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           ')
plt.ylabel('Linear Y')

fig, axes = plt.subplots(2, figsize=(5, 5))

axes[0].scatter(df['alcohol'], df['ash'], label=f'Alcohol to ash', color='red', marker='o', alpha=0.7)
axes[1].scatter(df['hue'], df['ash'], label=f'hue to ash', color='blue', marker='_', alpha=0.7)

