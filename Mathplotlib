#
# axes.set_xlabel(f'Alcohol')
# axes.set_ylabel(f'Malic Acid')
# axes.set_title(f'Alcohol, Malic Acid and Color Intensity (Size)')

axes[1].legend()

os.makedirs('plots', exist_ok=True)

